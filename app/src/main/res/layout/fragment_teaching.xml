<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#000"
    android:layout_height="match_parent">

    <com.example.widget.ChildClickableLinearLayout
        android:id="@+id/ll_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#484A6D"
            android:gravity="center"
            android:minWidth="85dp"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">


            <LinearLayout
                android:id="@+id/rl_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/shape_record">

                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/shape_record_dot" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="录制中"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <View
                    android:layout_width="70dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/lb_tv_white" />
            </LinearLayout>

            <!--分组-->
            <LinearLayout
                android:id="@+id/ll_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/group_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="分组"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />
            </LinearLayout>

            <!--广播-->
            <RelativeLayout
                android:id="@+id/rl_broadcast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView

                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/broadcast_icon" />

                    <TextView
                        android:id="@+id/tv_screen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="广播"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />
                </LinearLayout>
            </RelativeLayout>
            <!--对比-->
            <RelativeLayout
                android:id="@+id/rl_contrast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView

                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/contrast_icon" />

                    <TextView
                        android:id="@+id/tv_long"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="对比"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />
                </LinearLayout>
            </RelativeLayout>

            <View

                android:layout_width="70dp"
                android:layout_height="1dp"
                android:background="@color/lb_tv_white" />
            <!--演讲-->
            <RelativeLayout
                android:id="@+id/rl_speak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/speak_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="演讲者"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />
                </LinearLayout>
            </RelativeLayout>
            <!--笔记本-->
            <RelativeLayout
                android:id="@+id/rl_notebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_set"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/notebook_icon" />

                    <TextView
                        android:id="@+id/tv_set"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="笔记本"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />
                </LinearLayout>
            </RelativeLayout>
            <!--教师机-->
            <RelativeLayout
                android:id="@+id/rl_teacher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/teachering_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="教师机"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />
                </LinearLayout>
            </RelativeLayout>
            <!--无线-->
            <RelativeLayout
                android:id="@+id/rl_wifi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/wifiing_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/wifi_name"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />
                </LinearLayout>
            </RelativeLayout>

            <View

                android:layout_width="70dp"
                android:layout_height="1dp"
                android:background="@color/lb_tv_white" />
            <!--远程-->
            <RelativeLayout
                android:id="@+id/rl_long"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/long_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="远程"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />
                </LinearLayout>
            </RelativeLayout>
            <!--更多-->
            <RelativeLayout
                android:id="@+id/rl_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/more_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="更多"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:background="#00D5FF"
            android:text="上课"
            android:textColor="#000000"
            android:textSize="24sp" />
    </com.example.widget.ChildClickableLinearLayout>

    <!--底部工具栏-->
    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/ll_left"
        android:background="#484A6D"
        android:gravity="center_vertical"
        android:minHeight="85dp"
        android:orientation="horizontal"
        android:paddingLeft="300dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/line1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="150dp">

            <LinearLayout
                android:id="@+id/ll_plank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_bg_color"
                android:gravity="center"
                android:minWidth="160dp"
                android:minHeight="55dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_plank"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/white_plank_icon" />

                <TextView
                    android:id="@+id/tv_plank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:button="@null"
                    android:gravity="center"

                    android:text="电子白板"
                    android:textColor="@drawable/selector_text_color"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/selector_bg_color"
                android:gravity="center"
                android:minWidth="160dp"
                android:minHeight="55dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_circle"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/white_circle_icon" />

                <TextView
                    android:id="@+id/tv_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:button="@null"
                    android:gravity="center"
                    android:text="圈点"
                    android:textColor="@drawable/selector_text_color"
                    android:textSize="22sp" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_pen"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_pen"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/white_pen_icon" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_eraser"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_eraser"
                    android:layout_width="36dp"
                    android:layout_height="36dp"

                    android:src="@drawable/white_eraser_icon" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/white_back_icon" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_go"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_go"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/white_go_icon" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_add"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_add"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/white_add_icon" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_last"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_last"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/white_last_icon" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_next"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_next"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/white_next_icon" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_orthogon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_orthogon"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/white_orthogon_icon" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_exit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="invisible">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/white_close_icon" />
            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:minWidth="85dp"
            android:orientation="horizontal">

            <View
                android:layout_width="5dp"
                android:layout_height="85dp"
                android:background="#002247" />

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="50dp"
                android:src="@drawable/white_hide_icon" />
        </RelativeLayout>
    </RelativeLayout>

    <!--分组列表-->
    <RelativeLayout
        android:id="@+id/rl_recyclerView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_bottom"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:layout_toRightOf="@+id/ll_left"
        android:background="#3A4163"
        android:minWidth="200dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:visibility="gone">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="160dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <!--视频组件-->
    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_bottom"
        android:layout_toRightOf="@+id/rl_recyclerView"
        android:background="#000">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/play_icon" />
    </RelativeLayout>
    <!--画板-->
    <FrameLayout
        android:id="@+id/doodle_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_bottom"
        android:layout_toRightOf="@+id/rl_recyclerView"
        android:background="#ffffff"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_recover"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="40dp"
        android:scaleType="fitXY"
        android:src="@drawable/blue_show_icon"
        android:visibility="gone" />
</RelativeLayout>
